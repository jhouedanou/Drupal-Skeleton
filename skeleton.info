; SKELETON base theme
name        = Skeleton
description = An HTML5 base theme for NavigationArts projects to extend from.
engine      = phptemplate
core        = 7.x
screenshot  = screenshot.png

; FEATURES
features[] = logo
features[] = name
features[] = slogan
features[] = node_user_picture
features[] = comment_user_picture
features[] = favicon

; REGIONS
; => Duplicate all the core regions from Bartik
regions[header]               = Header
regions[help]                 = Help
regions[page_top]             = Page top
regions[page_bottom]          = Page bottom
regions[highlighted]          = Highlighted
regions[featured]             = Featured
regions[content]              = Content
regions[sidebar_first]        = Sidebar first
regions[sidebar_second]       = Sidebar second
regions[triptych_first]       = Triptych first
regions[triptych_middle]      = Triptych middle
regions[triptych_last]        = Triptych last
regions[footer_firstcolumn]   = Footer first column
regions[footer_secondcolumn]  = Footer second column
regions[footer_thirdcolumn]   = Footer third column
regions[footer_fourthcolumn]  = Footer fourth column
regions[footer]               = Footer
; => These regions are custom based on needing a space for block_menu Blocks
regions[nav_main]             = Main Navigation
regions[nav_global]           = Global Navigation
; => Custom region for Search Block
regions[search]               = Search
; => Custom right rail block assignment region
regions[sidebar_second_custom] = Custom right rail content

; STYLESHEETS
; => Replace system CSS with blank files to override them. 
stylesheets[all][]           = _res/css/overrides/comment.css
stylesheets[all][]           = _res/css/overrides/ctools.css
stylesheets[all][]           = _res/css/overrides/field.css
stylesheets[all][]           = _res/css/overrides/jquery.ui.core.css
stylesheets[all][]           = _res/css/overrides/jquery.ui.theme.css
stylesheets[all][]           = _res/css/overrides/media_youtube.css
stylesheets[all][]           = _res/css/overrides/node.css
stylesheets[all][]           = _res/css/overrides/search.css
stylesheets[all][]           = _res/css/overrides/system.menus.css
stylesheets[all][]           = _res/css/overrides/user.css
stylesheets[all][]           = _res/css/overrides/views.css

; => Theme custom CSS
stylesheets[all][]           = _res/libs/normalize.css
stylesheets[all][]           = _res/css/skeleton.css
stylesheets[all][]           = _res/css/skeleton.helpers.css

; SCRIPTS
scripts[]                    = _res/js/skeleton.js

; PANELS
plugins[panels][layouts] = layouts